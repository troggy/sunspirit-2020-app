{
  "private": true,
  "name": "sunspirit-2020-app",
  "description": "Unofficial app with information about SunSpirit 2020 Music Festival",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "xo --fix",
    "test": "jest ./tests",
    "postinstall": "rm -rf node_modules/@types/styled-components/node_modules/@types/react && rm -rf node_modules/@types/hoist-non-react-statics/node_modules/@types/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "xo --fix"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "import/no-anonymous-default-export": "off"
    },
    "settings": {
      "react": {
        "pragma": "h",
        "version": "detect"
      }
    },
    "envs": [
      "es2020",
      "browser"
    ],
    "space": true,
    "prettier": true
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  },
  "dependencies": {
    "idb": "^5.0.5",
    "is-offline": "^2.1.1",
    "preact": "^10.4.7",
    "preact-router": "^3.2.1",
    "styled-components": "^5.2.0",
    "tabletop": "^1.6.3",
    "xo": "^0.33.0"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.3.0",
    "@types/react": "^16.9.48",
    "@types/styled-components": "^5.1.3",
    "css-loader": "^4.2.2",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-typescript": "^0.32.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "preact-cli": "^3.0.1",
    "preact-render-to-string": "^5.1.10",
    "sirv-cli": "^1.0.6",
    "typescript": "^4.0.2"
  }
}
